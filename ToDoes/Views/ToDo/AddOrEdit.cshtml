@model ToDoes.Models.ToDo

@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "ToDo", FormMethod.Post, new { onsubmit = " return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        <div>
        @Html.LabelFor(model => model.Description, new { @class = "control-label" })
        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Description)
       </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.IsDone)
        @Html.EditorFor(model => model.IsDone, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <input type="submit"  value="Submit" class="btn btn-primary" />
        <input type="reset"  value="Reset" class="btn" />
    </div>
}